<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".AfterAllFeedBackActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thankyou for Your FeedBack. Your Feedback Saved Successfully !"
        android:layout_gravity="center"
        android:padding="20dp"
        android:textSize="20dp"
        android:fontFamily="@font/boald"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/mainfeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give Another feedback"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:fontFamily="@font/boald"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@drawable/roundedbutton"/>
    <Button
        android:id="@+id/otherfeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give OtherType feedback"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:fontFamily="@font/boald"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@drawable/roundedbutton"/>


</LinearLayout>